<core:FragmentDefinition xmlns:m="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form"  xmlns:core="sap.ui.core">
    <m:FlexBox justifyContent="Center" alignContent="Center">
        <form:SimpleForm width="{oFiexibleLayout>/Width}" layout="ResponsiveGridLayout" labelSpanXL="8" labelSpanL="8" labelSpanM="12" columnsXL="1" columnsL="2" columnsM="1" editable="true" adjustLabelSpan="true" singleContainerFullSize="false">
            <form:content>
                <m:VBox>
                    <m:Label text="{i18n>CompanyName}" design="Bold" />
                    <m:Text text="{registrationViewModel>/retailerReg/0/COMPANY_NAME}" />
                    <m:layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </m:layoutData>
                </m:VBox>
                <m:VBox>
                    <m:Label text="{i18n>StoreCount}" design="Bold" />
                    <m:Text text="{registrationViewModel>/retailerReg/0/STORE_COUNT}" />
                    <m:layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </m:layoutData>
                </m:VBox>
                <m:VBox>
                    <m:Label text="{i18n>EmployeeCount}" design="Bold" />
                    <m:Text text="{registrationViewModel>/retailerReg/0/EMP_COUNT}" />
                    <m:layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </m:layoutData>
                </m:VBox>

                <m:VBox>
                    <m:Label text="{i18n>OwnershipType}" design="Bold" />
                    <m:Text text="{registrationViewModel>/retailerReg/0/OWNERSHIP_TYPE}" />

                    <m:layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" />
                    </m:layoutData>
                </m:VBox>

                <m:VBox>
                    <m:Label text="{i18n>BusinessCode}" design="Bold" />
                    <m:Text text="{registrationViewModel>/retailerReg/0/BUSINESS_CODE}" />

                    <m:layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" />
                    </m:layoutData>
                </m:VBox>

                <m:VBox>
                    <m:Label text="{i18n>NatureOfBusiness}" design="Bold" />
                    <m:Text text="{registrationViewModel>/retailerReg/0/BUSINESS_DESC}" />
                    <m:layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" />
                    </m:layoutData>
                </m:VBox>
                <m:VBox>
                    <m:Label text="{i18n>ConcessionaireSupport}" design="Bold" />
                    <m:CheckBox selected="{registrationViewModel>/retailerReg/0/CONCESSIONAIRE_SUPPORT}" editable="false" />
                    <m:layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" />
                    </m:layoutData>
                </m:VBox>
                <m:VBox>
                    <m:Label text="{i18n>StoreFormat}" design="Bold" />
                    <m:Text text="{registrationViewModel>/retailerReg/0/STORE_FORMAT}" />

                    <m:layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" />
                    </m:layoutData>
                </m:VBox>
            </form:content>
        </form:SimpleForm>
    </m:FlexBox>
</core:FragmentDefinition>
