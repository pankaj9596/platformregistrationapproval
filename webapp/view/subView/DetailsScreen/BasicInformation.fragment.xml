<core:FragmentDefinition xmlns:m="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form"  xmlns:core="sap.ui.core">
 <m:FlexBox justifyContent="Center" alignContent="Center">
                                <form:SimpleForm width="{oFiexibleLayout>/Width}" layout="ResponsiveGridLayout" labelSpanXL="8" labelSpanL="8" labelSpanM="12" columnsXL="1" columnsL="2" columnsM="1" editable="true" adjustLabelSpan="true" singleContainerFullSize="false">
                                    <form:content>
                                        <m:VBox>
                                            <m:Label text="{i18n>EmailID}" design="Bold" />
                                            <m:Text text="{registrationViewModel>/retailerReg/0/EMAIL_ID}" />
                                            <m:layoutData>
                                                <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                                            </m:layoutData>
                                        </m:VBox>
                                        <m:VBox>
                                            <m:Label text="{i18n>Title}" design="Bold" />
                                            <m:Text text="{registrationViewModel>/retailerReg/0/TITLESEQID}" />
                                            <m:layoutData>
                                                <layout:GridData span="XL12 L12 M12 S12" />
                                            </m:layoutData>
                                        </m:VBox>
                                        <m:VBox>
                                            <m:Label text="{i18n>FirstName}" design="Bold" />
                                            <m:Text text="{registrationViewModel>/retailerReg/0/FIRST_NAME}" />
                                            <m:layoutData>
                                                <layout:GridData span="XL12 L12 M12 S12" />
                                            </m:layoutData>
                                        </m:VBox>

                                        <m:VBox>
                                            <m:Label text="{i18n>MiddleName}" design="Bold" />
                                            <m:Text text="{registrationViewModel>/retailerReg/0/MIDDLE_NAME}" />
                                            <m:layoutData>
                                                <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                                            </m:layoutData>
                                        </m:VBox>
                                        <m:VBox>
                                            <m:Label text="{i18n>LastName}" design="Bold" />
                                            <m:Text text="{registrationViewModel>/retailerReg/0/LAST_NAME}" />
                                            <m:layoutData>
                                                <layout:GridData span="XL12 L12 M12 S12" />
                                            </m:layoutData>
                                        </m:VBox>
                                        <m:VBox>
                                            <m:Label text="{i18n>RegistrationDate}" design="Bold" />
                                            <m:Text text="{path:'registrationViewModel>/retailerReg/0/REGISTRATION_DATE',type:'sap.ui.model.type.Date',formatOptions:{strictParsing:true,UTC:true,patter:'dd/MM/yyyy'}}" />
                                            <m:layoutData>
                                                <layout:GridData span="XL12 L12 M12 S12" />
                                            </m:layoutData>
                                        </m:VBox>
                                    </form:content>
                                </form:SimpleForm>
                            </m:FlexBox>
</core:FragmentDefinition>
