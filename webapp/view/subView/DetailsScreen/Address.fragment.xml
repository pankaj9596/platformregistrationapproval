<core:FragmentDefinition xmlns:m="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
     <layout:Grid defaultSpan="XL12 L12 M12 S12">
                                <m:VBox>
                                    <m:Table inset="false" mode="None" items="{oFiexibleLayout>/retailerReg/ADDRESS}">
                                        <m:columns>
                                            <m:Column>
                                                <m:Text text="{i18n>AddressType}" />
                                            </m:Column>
                                            <m:Column minScreenWidth="Tablet" demandPopin="true">
                                                <m:Text text="{i18n>AddressLine1}" />
                                            </m:Column>
                                            <m:Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                                <m:Text text="{i18n>AddressLine2}" />
                                            </m:Column>
                                            <m:Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                                <m:Text text="{i18n>AddressLine3}" />
                                            </m:Column>
                                            <m:Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                                <m:Text text="Country" />
                                            </m:Column>
                                            <m:Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                                <m:Text text="{i18n>State}" />
                                            </m:Column>
                                            <m:Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                                <m:Text text="{i18n>City}" />
                                            </m:Column>
                                            <m:Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                                <m:Text text="{i18n>PostalCode}" />
                                            </m:Column>
                                        </m:columns>
                                        <m:items>
                                            <m:ColumnListItem vAlign="Middle">
                                                <m:cells>
                                                    <m:Text text="{parts:[{path:'oFiexibleLayout>ADDRESS_TYPE'},{path:'oFiexibleLayout>/ADDRESSTYPE'}], formatter:'.formatter._getDescription'}" />
                                                    <m:Text text="{oFiexibleLayout>ADDRESS_LINE_1}" />
                                                    <m:Text text="{oFiexibleLayout>ADDRESS_LINE_2}" />
                                                    <m:Text text="{oFiexibleLayout>ADDRESS_LINE_3}" />
                                                    <m:Text text="{oFiexibleLayout>COUNTRY_CODE}" />
                                                    <m:Text text="{oFiexibleLayout>STATE}" />
                                                    <m:Text text="{oFiexibleLayout>CITY}" />
                                                    <m:Text text="{oFiexibleLayout>POSTAL_CODE}" />
                                                </m:cells>
                                            </m:ColumnListItem>
                                        </m:items>
                                    </m:Table>
                                    <m:layoutData>
                                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                                    </m:layoutData>
                                </m:VBox>
                            </layout:Grid>
</core:FragmentDefinition>
