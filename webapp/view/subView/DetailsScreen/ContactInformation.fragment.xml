<core:FragmentDefinition xmlns:m="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <m:FlexBox justifyContent="Center" alignContent="Center">
        <form:SimpleForm width="{oFiexibleLayout>/Width}" layout="ResponsiveGridLayout" labelSpanXL="8" labelSpanL="8" labelSpanM="12" columnsXL="1" columnsL="2" columnsM="1" editable="true" adjustLabelSpan="true" singleContainerFullSize="false">
            <form:content>
                <m:VBox>
                    <m:Label text="{i18n>PhoneCountryCode}" design="Bold" />
                    <m:Text text="{registrationViewModel>/retailerReg/0/PH_COUNTRY_CODE}" />

                    <m:layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" linebreak="true" />
                    </m:layoutData>
                </m:VBox>
                <m:VBox>
                    <m:Label text="{i18n>PhoneNo}" design="Bold" />
                    <m:Text text="{registrationViewModel>/retailerReg/0/PHONE_NUMBER}" />
                    <m:layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" />
                    </m:layoutData>
                </m:VBox>
                <m:VBox>
                    <m:Label text="{i18n>AltPhoneCountryCode}" design="Bold" />
                    <m:Text text="{registrationViewModel>/retailerReg/0/ALT_PH_COUNTRY_CODE}" />

                    <m:layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" />
                    </m:layoutData>
                </m:VBox>
                <m:VBox>
                    <m:Label text="{i18n>AltPhoneNo}" design="Bold" />
                    <m:Text text="{registrationViewModel>/retailerReg/0/ALT_PHN_NUMBER}" />
                    <m:layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" />
                    </m:layoutData>
                </m:VBox>
                <m:VBox>
                    <m:Label text="{i18n>PrimaryContactName}" design="Bold" />
                    <m:Text text="{registrationViewModel>/retailerReg/0/LAST_NAME}" />
                    <m:layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" />
                    </m:layoutData>
                </m:VBox>
                <m:VBox>
                    <m:Label text="{i18n>AltEmailID}" design="Bold" />
                    <m:Text text="{registrationViewModel>/retailerReg/0/ALT_EMAIL_ID}" />
                    <m:layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" />
                    </m:layoutData>
                </m:VBox>
                <m:VBox>
                    <m:Label text="{i18n>FaxNumber}" design="Bold" />
                    <m:Text text="{registrationViewModel>/retailerReg/0/FAX_NUMBER}" />
                    <m:layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" />
                    </m:layoutData>
                </m:VBox>
                <m:VBox>
                    <m:Label text="{i18n>TeleFaxNumber}" design="Bold" />
                    <m:Text text="{registrationViewModel>/retailerReg/0/TELE_FAX_NUMBER}" />
                    <m:layoutData>
                        <layout:GridData span="XL12 L12 M12 S12" />
                    </m:layoutData>
                </m:VBox>
            </form:content>
        </form:SimpleForm>
    </m:FlexBox>
</core:FragmentDefinition>
