<mvc:View controllerName="usermanagement.platformregistrationapproval.controller.ApprovalMaster" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form">
    <Page  backgroundDesign="List" showHeader="false" title="{i18n>title}">
        <content>
            <Table id="idMastertable" inset="false" items="{oFiexibleLayout>/MasterList}">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title wrapping="true" text="Platform Request" level="H3" titleStyle="H3" />
                        <ToolbarSpacer />
                        <SearchField search="onSearch" width="17.5rem" />
                        <!-- <Button tooltip="View Sort Settings" icon="sap-icon://sort" press="onPressOverviewTableSort" /> -->
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column >
                        <Text text="{i18n>Code}" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>CompanyName}" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>RegistrationDate}" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>EmailId}" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>POC}" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>PhoneNo}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle" press="onPress" type="Active">
                        <cells>
                            <Text text="{oFiexibleLayout>BUSINESS_CODE}" />
                            <Text text="{oFiexibleLayout>COMPANY_NAME}" />
                            <Text text="{parts:[{path:'oFiexibleLayout>REGISTRATION_DATE'}], formatter:'.formatter.dateTimeFormatter'}" />
                            <!-- <Text text="{path:'oFiexibleLayout>REGISTRATION_DATE',type:'sap.ui.model.type.Date',formatOptions:{strictParsing:true,UTC:true,patter:'dd/MM/yyyy'}}" /> -->
                            <Text text="{oFiexibleLayout>EMAIL_ID}" />
                            <Text text="{oFiexibleLayout>PRIMARY_CONTACT_NAME}" /> 
                            <Text text="{oFiexibleLayout>PHONE_NUMBER}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>


        </content>
    </Page>
</mvc:View>
